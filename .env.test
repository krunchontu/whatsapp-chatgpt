# Test Environment Configuration
# This file is used when running tests

NODE_ENV=test

# File-based database for tests (allows schema to persist)
DATABASE_URL=file:./test.db

# Mock Redis (or use local Redis for integration tests)
REDIS_URL=redis://localhost:6379

# OpenAI (use mock in tests, or real key for integration tests)
OPENAI_API_KEY=sk-test-mock-key
OPENAI_GPT_MODEL=gpt-4o
MAX_MODEL_TOKENS=2000

# Disable external services
TRANSCRIPTION_ENABLED=false
TTS_ENABLED=false
MODERATION_ENABLED=false

# Rate limiting (relaxed for tests)
RATE_LIMIT_PER_USER=1000
RATE_LIMIT_GLOBAL=10000

# Logging (minimal for tests)
LOG_LEVEL=error

# Short retention for test data
CONVERSATION_RETENTION_DAYS=1
